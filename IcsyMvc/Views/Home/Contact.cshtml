@using IcsyMvc.Models;
@model ContactFormModel

@{
    ViewBag.Title = "Contact";
}

<div class="jumbotron">
    <h1>Get In Touch!</h1>
    <p class="jumbotron-text">Thanks for stopping by. We hope you have enjoyed your visit. We'd love to hear from you. Please complete the handy dandy form below, and we will get back to you as soon as possible.</p>
</div>

<div class="row contact-row">
    <div class="col-md-6">
        <div class="form-heading"><h2>Contact US</h2></div>
        <form class="contact-form" action='@Url.Action("Contact", "Home")' method="post">
            @Html.ValidationSummary(false)
            <div class="form-group">
                @Html.LabelFor(x => x.FromFirstName, new { @class="sr-only" })
                @Html.TextBoxFor(x => x.FromFirstName, new { @class="form-control", @placeholder="First Name" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.FromLastName, new { @class = "sr-only" })
                @Html.TextBoxFor(x => x.FromLastName, new { @class = "form-control", @placeholder = "Last Name" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.FromEmail, new { @class = "sr-only" })
                @Html.TextBoxFor(x => x.FromEmail, new { @class = "form-control", @placeholder = "Email", @type="Email" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Subject, new { @class = "sr-only" })
                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @placeholder = "Subject" })
            </div>
            <div class="form-group">
                @Html.TextAreaFor(x => x.Message, new { @class = "form-control", @placeholder = "Message", @rows = "2" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.FormVerification, new { @class = "sr-only" })
                @Html.TextBoxFor(x => x.FormVerification, new { @class = "form-control", @placeholder = "Enter any two-digit number" })
            </div>
            <button type="submit" class="btn btn-submit">Submit</button>
        </form>
    </div>
    <div class="col-md-6">
        <img class="science-image img-responsive" src="/images/kid_science.jpg" alt="child working with science">
    </div>
</div>